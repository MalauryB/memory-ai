{
  "extends": ["next/core-web-vitals"],
  "rules": {
    "no-console": ["warn", {
      "allow": ["error"]
    }],
    "no-debugger": "error",
    "no-alert": "error",
    "@typescript-eslint/no-unused-vars": ["warn", {
      "argsIgnorePattern": "^_",
      "varsIgnorePattern": "^_"
    }]
  },
  "overrides": [
    {
      "files": ["app/api/**/*.ts"],
      "rules": {
        "no-console": "error"
      }
    }
  ]
}
